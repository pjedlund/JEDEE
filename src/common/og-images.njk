---
fontDisplay: "Iowan Old Style" # needed created in local development, font must be installed on your system.
fontBody: "sans-serif" # needed created in local development, font must be installed on your system.
background: '#F4F4F2'
textColor: '#495464'
siteUrl: 'jedee.netlify.app'
pagination:
  data: collections.allPosts
  size: 1
  alias: post
permalink: '/assets/og-images/{{ post.data.title | slugify }}-preview.svg'
eleventyExcludeFromCollections: true
---

<svg
  width="1200"
  height="630"
  viewBox="0 0 1200 630"
  version="1.1"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
>
  {% set titleInLines = post.data.title | splitlines(22) %}
  {% set numberOfLines = titleInLines.length %}
  {% if numberOfLines == 1 %}
    {% set verticalStartingPoint = 340 %}
    {% elseif numberOfLines == 2 %}
    {% set verticalStartingPoint = 290 %}
    {% elseif numberOfLines == 3 %}
    {% set verticalStartingPoint = 250 %}
    {% elseif numberOfLines == 4 %}
    {% set verticalStartingPoint = 210 %}
    {% elseif numberOfLines == 5 %}
    {% set verticalStartingPoint = 170 %}
  {% endif %}

  <rect id="bg" width="100%" height="100%" opacity="1" fill="{{ background }}" />
  <!-- star -->
  <g width="1096" height="1056" viewBox="0 0 1096 1056" fill="none" transform="translate(0, -150)">
    <path d="M235.048 2.31017L565.808 192.455L910.285 28.026L831.43 401.258L1094.33 677.671L714.848 718.199L533.127 1053.8L377.382 705.568L2.18875 636.646L285.207 380.519L235.048 2.31017Z" stroke="{{ textColor }}" stroke-opacity="0.1" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
  </g>

  <!-- date -->
  <text
    font-family="Dank Mono"
    font-size="18"
    font-weight="700"
    fill="#555"
    letter-spacing="-1"
  >
    <tspan x="160" y="{{ verticalStartingPoint - 120 }}">
      {{ post.date | formatDate('YYYY/MM/DD') }}
    </tspan>
  </text>

  <!-- title -->
  <text
    id="text"
    font-family="{{ fontDisplay }}, serif"
    font-size="80"
    font-weight="700"
    fill="{{ textColor }}"
    letter-spacing="-3"
  >
    {% for line in titleInLines %}
      <tspan x="160" y="{{ verticalStartingPoint - 20 + loop.index0 * 85 }}"> {{ line }} </tspan>
    {% endfor %}
  </text>

  <!-- url -->
  <text
    font-family="Dank Mono"
    font-size="20"
    font-style="italic"
    font-weight="300"
    letter-spacing="-1"
    fill="{{ textColor }}"
  >
    <tspan x="160" y="580">{{ siteUrl }}</tspan>
  </text>


  <!-- sitename -->
  <text
    font-family="{{ fontBody }}, sans-serif"
    font-size="18"
    font-weight="600"
    fill="{{ textColor }}"
    letter-spacing="-1"
  >
    <tspan x="950" y="580">{{ meta.siteName | upper }}</tspan>
  </text>

	<!-- JED logo graphic -->
  <g transform="translate(910,555) scale (0.07, 0.07) ">
    <path fill="#626449" d="M254,93C254.648,93 255.295,93.004 255.941,93.011L255.941,93L287.971,93L287.971,194.912L255.941,194.912L255.941,194.941C255.296,194.922 254.649,194.912 254,194.912C219.157,194.912 190.912,223.157 190.912,258C190.912,292.843 219.157,321.088 254,321.088C288.843,321.088 317.088,292.843 317.088,258L317.088,194.912C317.088,138.627 362.716,93 419,93L419,258C419,349.127 345.127,423 254,423C162.873,423 89,349.127 89,258C89,166.873 162.873,93 254,93Z"/>
  </g>
</svg>
